{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Android - Experimental",
        "request": "launch",
        "type": "reactnative",
        "cwd": "${workspaceFolder}",
        "platform": "android"
      },
      {
        "name": "Debug Android Hermes",
        "request": "launch",
        "type": "reactnativedirect",
        "cwd": "${workspaceFolder}",
        "platform": "android"
      },
      {
        "name": "Debug Android (Expo)",
        "program": "${workspaceFolder}/node_modules/expo/AppEntry.js",
        "request": "launch",
        "type": "reactnative",
        "platform": "android",
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "env": {
          "EXPO_DEBUG": "true"
        }
      },
      
      {
        "name": "Attach to packager",
        "cwd": "${workspaceFolder}",
        "type": "reactnative",
        "host": "localhost",
        "port": 8081,
        "request": "attach",
        "isDynamic": true
      }
    ]
  }
  